<body>

    <div class="pids-wrapper">
        <div class="sidebar">
            <div class="station-header" id="ui-header">
                <div class="st-badge" id="ui-st-id">--</div>
                <div class="st-name-zh" id="ui-st-name">載入中...</div>
            </div>

            <div class="arrival-info" id="block-dir0">
                <div class="dir-label" id="dir0-label">第一月台 Platform 1</div>
                <div class="line-tag-row">
                    <div class="line-badge-small" id="ui-line-tag-1">--</div>
                    <div class="dest-zh" id="dir0-dest">正在獲取</div>
                </div>
                <div class="dest-en" id="dir0-en">Fetching...</div>
                <div class="time-box" id="dir0-time">-- : --</div>
            </div>

            <div class="arrival-info secondary" id="block-dir1">
                <div class="dir-label" id="dir1-label">第二月台 Platform 2</div>
                <div class="line-tag-row">
                    <div class="line-badge-small" id="ui-line-tag-2">--</div>
                    <div class="dest-zh" id="dir1-dest">正在獲取</div>
                </div>
                <div class="dest-en" id="dir1-en">Fetching...</div>
                <div class="time-box" id="dir1-time">-- : --</div>
            </div>

            <!-- 大橋頭站專用第三方向 -->
            <div class="arrival-info" id="block-dir2" style="display:none;">
                <div class="dir-label" id="dir2-label">第二月台 Platform 2</div>
                <div class="line-tag-row">
                    <div class="line-badge-small" id="ui-line-tag-3">O</div>
                    <div class="dest-zh" id="dir2-dest">正在獲取</div>
                </div>
                <div class="dest-en" id="dir2-en">Fetching...</div>
                <div class="time-box" id="dir2-time">-- : --</div>
            </div>

            <div class="weather-box">
                <div style="display: flex; align-items: baseline;">
                    <span class="temp-value" id="ui-temp">24</span>
                    <span style="font-size: 2vw; font-weight: 900; margin-left: 5px;">°C</span>
                </div>
                <div class="weather-desc">
                    <i class="fas fa-cloud-sun"></i>
                    <span id="ui-weather-text">多雲時晴</span>
                </div>
            </div>
        </div>

        <div class="main-display">
            <div class="video-placeholder">
                <iframe id="video-iframe" src="" frameborder="0" allow="autoplay; encrypted-media"></iframe>
            </div>
            <!-- 擁擠度顯示區 -->
            <div class="congestion-area" id="ui-congestion-root">
                <!-- 動態注入擁擠度列 -->
            </div>
        </div>

        <div class="footer">
            <div class="clock-section" id="clock">00:00</div>
            <div class="marquee-section"><div class="marquee-text" id="ui-marquee">歡迎搭乘捷運系統...</div></div>
        </div>
    </div>

    <script>
        const WORKER_URL = 'https://metro-api-worker.xiaoyouwu5-fd3.workers.dev/api';
        const params = new URLSearchParams(window.location.search);
        const system = params.get('system') || 'TRTC';
        const station = params.get('station') || 'BL12'; 

        const systemColors = { 'TRTC': '#0070bd', 'KRTC': '#f58220', 'TYMC': '#8246af', 'TMRT': '#b2d235', 'KLRT': '#008010', 'NTMC': '#0096cc' };
        const stationOverrides = { 'RK1': '岡山車站', 'R3': '小港', 'O1': '哈瑪星', 'OT1': '大寮' };
        const terminals = ['BL01', 'BL23', 'BR01', 'BR24', 'G01', 'G19', 'O01', 'O21', 'O54', 'R02', 'R28', 'Y01', 'Y20'];

        let countdownSecs = { dir0: -1, dir1: -1, dir2: -1 };

        async function updateLiveBoard() {
            // ✨ 優化 1：先從 stationOverrides 找出站名，不必等 API 回傳
            const stName = stationOverrides[station] || station; 
            document.getElementById('ui-st-id').innerText = station;
            document.getElementById('ui-st-name').innerText = stName;

            try {
                // ✨ 優化 2：針對北捷，在 URL 帶入 sid 參數（如果 Worker 支援後端過濾）
                const response = await fetch(`${WORKER_URL}/liveboard?sys=${system}&sid=${station}`);
                
                if (!response.ok) throw new Error("Network issues");
                const allData = await response.json();
                
                // ✨ 優化 3：快速過濾（如果 Worker 未過濾，在前端執行）
                const stationData = allData.filter(t => String(t.StationID).toUpperCase() === station.toUpperCase());
                
                if (stationData.length > 0) {
                    const first = stationData[0];
                    const color = first.LineColor || systemColors[system];
                    document.documentElement.style.setProperty('--theme-color', color);
                    
                    // 更新正確的中文名 (API 回傳的可能更準)
                    const finalName = stationOverrides[station] || first.StationName?.Zh_tw || stName;
                    document.getElementById('ui-st-name').innerText = finalName;

                    // 處理邏輯 (大橋頭 O12 / 高捷 KRTC / 一般)
                    processAndRender(stationData);
                } else {
                    handleNoData();
                }
            } catch (e) { 
                console.error("Fetch Error:", e);
                document.getElementById('ui-st-name').innerText = "連線更新中...";
            }
        }

        // 將渲染邏輯拆分出來，讓主函數更乾淨、執行更快
        function processAndRender(data) {
            if (station === 'O12' && system === 'TRTC') {
                renderO12(data);
            } else if (system === 'KRTC') {
                renderKRTC(data);
            } else {
                renderStandard(data);
            }
        }

        // 大橋頭站 O12 渲染邏輯
        function renderO12(data) {
            document.getElementById('block-dir2').style.display = 'flex';
            const t_nan = data.find(t => t.DestinationStationID === 'O01');
            const t_hui = data.find(t => t.DestinationStationID === 'O54');
            const t_luz = data.find(t => t.DestinationStationID === 'O21');
            
            document.getElementById('dir0-label').innerText = "第一月台 往南勢角";
            document.getElementById('dir1-label').innerText = "第二月台 往迴龍";
            document.getElementById('dir2-label').innerText = "第二月台 往蘆洲";

            updateUI(0, t_nan); updateUI(1, t_hui); updateUI(2, t_luz);
            renderCongestion([ {l:'往南勢角', t:t_nan}, {l:'往迴龍', t:t_hui}, {l:'往蘆洲', t:t_luz} ]);
        }

        // 高雄捷運渲染邏輯
        function renderKRTC(data) {
            document.getElementById('block-dir2').style.display = 'none';
            const linePrefix = station.charAt(0).toUpperCase(); 
            
            if (linePrefix === 'R') {
                // 紅線：固定槽位 0 為南下，槽位 1 為北上
                document.getElementById('dir0-label').innerText = "南下 往小港";
                document.getElementById('dir1-label').innerText = "北上 往岡山";

                const t_to_siaogang = data.filter(t => t.Direction == 0 || t.DestinationStationID === 'R3').sort((a,b) => a.EstimateTime - b.EstimateTime)[0];
                const t_to_gangshan = data.filter(t => t.Direction == 1 || t.DestinationStationID === 'RK1' || t.DestinationStationID === 'R24').sort((a,b) => a.EstimateTime - b.EstimateTime)[0];

                updateUI(0, t_to_siaogang);
                updateUI(1, t_to_gangshan);
            } 
            else if (linePrefix === 'O') {
                // 橘線：固定槽位 0 為西行，槽位 1 為東行
                document.getElementById('dir0-label').innerText = "西行 往哈瑪星";
                document.getElementById('dir1-label').innerText = "東行 往大寮";

                const t_to_hamasen = data.filter(t => t.Direction == 0 || t.DestinationStationID === 'O1').sort((a,b) => a.EstimateTime - b.EstimateTime)[0];
                const t_to_daliao = data.filter(t => t.Direction == 1 || t.DestinationStationID === 'OT1').sort((a,b) => a.EstimateTime - b.EstimateTime)[0];

                updateUI(0, t_to_hamasen);
                updateUI(1, t_to_daliao);
            }
            renderCongestion([]); 
        }

        // 標準系統渲染邏輯（北捷一般站、桃捷、中捷等）
        function renderStandard(data) {
            document.getElementById('block-dir2').style.display = 'none';
            const groups = {};
            data.forEach(t => {
                const key = (t.Direction !== undefined) ? `DIR_${t.Direction}` : t.DestinationStationID;
                if (!groups[key]) groups[key] = [];
                groups[key].push(t);
            });
            const keys = Object.keys(groups).sort();
            const t1 = groups[keys[0]] ? groups[keys[0]].sort((a,b)=>a.EstimateTime-b.EstimateTime)[0] : null;
            const t2 = groups[keys[1]] ? groups[keys[1]].sort((a,b)=>a.EstimateTime-b.EstimateTime)[0] : null;

            document.getElementById('dir0-label').innerText = "第一月台 Platform 1";
            document.getElementById('dir1-label').innerText = "第二月台 Platform 2";

            updateUI(0, t1); updateUI(1, t2);
            
            if (system === 'TRTC') {
                if (terminals.includes(station)) renderCongestion([{l:'車廂擁擠度', t:t1||t2}]);
                else renderCongestion([{l:'第一月台', t:t1}, {l:'第二月台', t:t2}]);
            } else {
                renderCongestion([]);
            }
        }

        // 無資料處理
        function handleNoData() {
            document.getElementById('block-dir2').style.display = 'none';
            updateUI(0, null); updateUI(1, null);
            renderCongestion([]);
        }

        function updateUI(idx, item) {
            const prefix = `dir${idx}`;
            if (!item) {
                document.getElementById(`${prefix}-dest`).innerText = "無列車服務";
                document.getElementById(`${prefix}-time`).innerText = "-- : --";
                countdownSecs[prefix] = -1;
                return;
            }
            document.getElementById(`${prefix}-dest`).innerText = item.DestinationStationName?.Zh_tw || "終點站";
            document.getElementById(`${prefix}-en`).innerText = item.DestinationStationName?.En || "No Service";
            document.getElementById(`ui-line-tag-${idx+1}`).innerText = item.LineID || "--";
            countdownSecs[prefix] = item.EstimateTime;
            drawTime(idx);
        }

        function drawTime(idx) {
            const el = document.getElementById(`dir${idx}-time`);
            const s = countdownSecs[`dir${idx}`];
            if (s <= 30 && s >= 0) { el.innerText = "進站中"; el.className = "time-box arriving"; }
            else if (s > 30) {
                const m = Math.floor(s/60);
                el.innerText = `${m} : ${String(s%60).padStart(2,'0')}`;
                el.className = s <= 90 ? "time-box approaching" : "time-box";
            }
        }

        function renderCongestion(rows) {
            const root = document.getElementById('ui-congestion-root');
            if (system !== 'TRTC') { root.style.display = 'none'; return; }
            root.style.display = 'flex';
            
            root.innerHTML = rows.map(r => `
                <div class="cong-row">
                    <div class="cong-label-tag">${r.l}</div>
                    <div class="car-container">${genCars(r.t?.Congestion)}</div>
                </div>
            `).join('');
        }

        function genCars(data) {
            if (!data || data.length === 0) return Array(6).fill('<div class="car none"></div>').join('');
            return data.map(v => {
                let c = 'car';
                if (v == 4) c += ' level4'; else if (v == 3) c += ' level3'; else if (v == 2) c += ' level2';
                return `<div class="${c}"></div>`;
            }).join('');
        }

        setInterval(() => { 
            [0,1,2].forEach(i => { if(countdownSecs[`dir${i}`]>0){ countdownSecs[`dir${i}`]--; drawTime(i); } });
        }, 1000);

        // 強化版時鐘功能：顯示 月/日 與 時間
        setInterval(() => { 
            const now = new Date();
            
            // 取得 月份 與 日期 (補零)
            const month = String(now.getMonth() + 1).padStart(2, '0');
            const date = String(now.getDate()).padStart(2, '0');
            
            // 取得時間 (12小時制)
            const timeStr = now.toLocaleTimeString('en-US', { 
                hour: '2-digit', 
                minute: '2-digit', 
                hour12: true 
            }).toUpperCase(); // 讓 AM/PM 變成大寫更專業

            // 組合顯示內容
            document.getElementById('clock').innerText = `${month}/${date} ${timeStr}`;
        }, 1000);

        // 跑馬燈功能
        async function updateMarquee() {
            const psas = ["發現性騷擾及異常事件，迅速通報。", "遇緊急狀況保持冷靜，使用對講機。", "捷運系統全面禁菸。", "電扶梯兩側皆可站立。"];
            try {
                const res = await fetch(`${WORKER_URL}/news?sys=${system}`);
                const data = await res.json();
                let marqueeContent = "";
                if (data.Newses && data.Newses.length > 0) {
                    marqueeContent = data.Newses.slice(0, 5).map(n => `【最新消息】${n.Title}`).join('　　') + '　　';
                }
                document.getElementById('ui-marquee').innerText = marqueeContent + psas.join('　　') + '　　祝您旅途愉快！';
            } catch (e) {
                document.getElementById('ui-marquee').innerText = psas.join('　　');
            }
        }

        // 氣象更新功能
        function updateWeather() {
            const temp = 24 + Math.floor(Math.random() * 2); 
            document.getElementById('ui-temp').innerText = temp;
            document.getElementById('ui-weather-text').innerText = "多雲時晴";
        }

        // 影片
        document.getElementById('video-iframe').src = "https://www.youtube.com/embed/5_mI_V_I90s?autoplay=1&mute=1&loop=1&playlist=5_mI_V_I90s&controls=0";

        updateLiveBoard();
        updateMarquee();
        updateWeather();
        setInterval(updateLiveBoard, 20000);
        setInterval(updateMarquee, 60000);
    </script>
</body>
</html>
